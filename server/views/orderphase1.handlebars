<div class="container">
	<div class="col-sm-6 col-sm-offset-3">
		{{>progressBar}}
	</div>
</div>
<form action="/secure/orderphase2" method="post">
	<div class="container orderBox">
		<div class="col-sm-6 col-sm-offset-3">
			{{#if isMessage }}
			<div class="alert alert-danger">
				{{ message }}
			</div>
			{{/if}}
			{{!-- {{t "app.name" }} --}}
			{{>customerDetails}}
			<button type="submit" class="pull-right btn btn-warning btn-lg">{{t "continue"}}</button>
		</div>
	</div>
</form>